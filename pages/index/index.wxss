.AngleSensor {
  margin-top: 30rpx;
  text-align: center;
  display: flex;
  justify-content: space-evenly;
}

.AngleSensorItem {
  display: grid;
  text-align: center;
}

.Axis {
  text-align: center;
}

.AngleSensorData {
  width: 132rpx;
  margin-right: 5px;
  margin-top: 8rpx;
  margin: 8rpx auto 0rpx auto;
  color: #fff;
  font-size: 24px;
  text-align: center;
  background-color: #1989fa;
  border-radius: 2px;
}

.charts {
  height: 667rpx;
  width: 750rpx;
  margin-top: 30rpx;
}

#blueToothImage {
  height: 38rpx;
  width: 30rpx;
  vertical-align: text-bottom;
  margin-right: 5rpx;
}


#status {
  width: 100%;
}

#result {
  text-align: center;
  margin: 50rpx auto auto auto;
  font-size: 80rpx;
}

#connectBlueTooth {
  text-align: center;
  margin: 0 auto;
  margin-top: 120rpx;
}